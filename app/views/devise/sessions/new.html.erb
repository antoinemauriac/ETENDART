<div id="no-user" class="row">
  <div class="bg-white p-4 rounded-4 col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3">
    <h2 class="bg-black p-2 rounded-4 text-white text-center mb-4">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    label: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: "Email" %>
        <%= f.input :password,
                    label: false,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: "mot de passe" %>
        <div class="form-check mt-3 mb-3">
          <%= f.check_box :remember_me, class: "form-check-input", style:"font-size:1rem", id: "remember_me" if devise_mapping.rememberable? %>
          <%= f.label :remember_me, "Se souvenir de moi ?", class: "form-check-label", for: "remember_me" if devise_mapping.rememberable? %>
        </div>
      </div>

      <div class="flexy">
        <h6 class="mb-0"><%= f.button :submit, "VALIDER", class: "btn btn-dark rounded-4 px-4 py-2 mb-4" %></h6>
      </div>
      <div class="d-flex flex-column">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

    <hr>
    <div class="flexy">
      <h6 class="mb-4" style="font-size:0.75rem">Vous n'avez encore pas de compte ?</h6>
      <h6><%= link_to "Inscription", new_user_registration_path, class: "btn btn-dark parent-title white-hover px-3 py-3 rounded-4" %></h6>
    </div>
  </div>

</div>
