<main id="form-signup" class="h-100">

  <div class="bg-white container p-3 rounded-3">
    <h1 class="text-center bg-black text-bg-dark rounded-3 mb-3">Inscription</h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>
      <%= render "devise/shared/error_messages", resource: @user %>

      <div class="form-inputs">

        <div class="row">
          <div class="col-md-6">
            <%= f.input :first_name, label: "Prénom", required: true %>
          </div>
          <div class="col-md-6">
            <%= f.input :last_name, label: "Nom", required: true %>
          </div>

          <div class="col-12">
            <%= f.input :email,
                        required: true,
                        input_html: { autocomplete: "email" }%>
          </div>

          <div class="col-12">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="col-12">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

        </div>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "S'inscrire", class: "btn btn-primary" %>
      </div>
    <% end %>

    <hr>
    <p class="text-center">
      Vous avez déjà un compte ? <%= link_to "Connexion", new_user_session_path, class: "text-primary" %>
    </p>
    <p class="text-center">
      ou
    </p>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="text-center">
      <%= link_to "Je n'ai pas reçu l'email de confirmation", new_confirmation_path(resource_name), class: "text-primary" %>
    </p>
    <% end %>

  </div>

</main>
