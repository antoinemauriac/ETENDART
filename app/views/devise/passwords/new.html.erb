<div id="no-user" class="row">
  <div class="bg-white p-4 rounded-4 col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3">
    <h4 class="bg-black p-2 rounded-4 text-white text-center mb-4">Réinitialisation du mot de passe</h4>
    <p class="text-center mb-4">Veuillez renseigner votre email afin de recevoir un lien pour réinitialiser votre mot de passe</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email" },
                    placeholder: "Email" %>
      </div>

      <div class="px-5 d-flex justify-content-center flex-column">
        <%= f.button :submit, "Envoyer le lien", class: "btn btn-dark rounded-4 px-4 py-2 mb-3" %>
        <%= link_to "Retour", root_path, class: "btn btn-grey rounded-4 px-4 py-2 mb-4" %>
      </div>
    <% end %>
  </div>
</div>
