<div id="no-user" class="row">
  <div class="devise-form">
    <h2 class="header-info mb-3">Changement du mot de passe</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "Nouveau mot de passe",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmer le nouveau mot de passe",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="flexy">
        <%= f.button :submit, "Valider", class: "btn-etendart btn-connexion-bis mb-4", style:"width:100%"  %>
      </div>
    <% end %>
  </div>
</div>
