<%= simple_form_for @parent_profile, url: new_parents_profile_path do |f| %>
  <div class="form-inputs">
    <%= f.input :gender, label: "Genre", collection: ["Homme", "Femme", "Autre"], include_blank: false %>
    <%= f.input :relationship_to_child, label: "Relation avec l'enfant", collection: ["Père", "Mère", "Tuteur", "Autre"], include_blank: false, as: :select %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
