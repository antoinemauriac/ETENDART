<h4 class="bg-black text-white text-center p-3">
  Modifier les informations
</h4>

<section class="row justify-content-center p-3">
  <div class="form-inputs rounded-4 shadow bg-white col-12 col-lg-10 col-xl-8 pb-3">
    <%= simple_form_for @child, url: parents_child_path(@child), html: { data: { controller: "medical-treatment", action: "submit->medical-treatment#validateForm" } } do |f| %>
      <div class="container-sm p-3 mt-3">
        <h2 class="mb-3">
          Informations
        </h2>
        <div class="row mb-2">
          <div class="col-md-6">
            <%= f.input :first_name, label: "Prénom" %>
          </div>
          <div class="col-md-6">
            <%= f.input :last_name, label: "Nom" %>
          </div>

          <div class="col-md-6">
            <%= f.input :date_of_birth, label: "Date de naissance", as: :date, start_year: 2004,
            end_year: 2025 %>
          </div>
          <div class="col-md-6">
            <%= f.input :gender, label: "Genre", collection: ["Garçon", "Fille"], include_blank: false %>
          </div>

        </div>

        <div class="row mb-2">
          <div class="col-12">
            <%= f.input :photo, as: :file %>
          </div>
        </div>
      </div>
      <div class="container-sm p-3">
        <h2 class="mb-3">
          Administratif
        </h2>

        <div class="row mb-2">

          <div class="col-md-6">
            <%= f.input :has_medical_treatment, label: "L'enfant suit-il un traitement médical ?", as: :radio_buttons, collection: [['Oui', true], ['Non', false]], input_html: { data: { medical_treatment_target: "hasMedicalTreatment", action: "change->medical-treatment#toggleDescriptionRequirement" } } %>
          </div>

          <div class="col-12 d-none" data-medical-treatment-target="descriptionContainer">
            <%= f.input :medical_treatment_description, label: "Description du traitement médical", as: :text, input_html: { data: { medical_treatment_target: "description" } } %>
          </div>

        </div>

        <div class="row mb-2">
          <div class="col-md-6">
            <%= f.input :has_consent_for_photos, label: "J'autorise la prise de photos de mon enfant", as: :radio_buttons, collection: [["J'autorise", true], ["Je n'autorise pas", false]] %>
          </div>
        </div>
      </div>
      <div class="text-center">
        <%= f.button :submit, "Valider", class: "btn btn-dark rounded-pill px-4 py-2" %>
      </div>
    <% end %>
  </div>
</section>
