<h1 class="text-center my-3 bg-yellow text-black py-3 my-3">
  <%= @child.full_name %>
</h1>

<section class="row gy-3 justify-content-center">

  <div class="col-lg-5 col-md-7 col-sm-12" data-upload-photo-student-id-value="<%=@child.id%>">
    <%= render "parents/children/components/information-card", child: @child, start_year: @start_year, membership: @membership %>
  </div>

  <div class="col-lg-3 col-md-5 col-sm-12">
    <%= render "parents/children/components/historic-card", child: @child %>
  </div>

</section>

<section class="row justify-content-center">
  <div class="col-lg-11 col-sm-12 mt-3">
    <%= render "parents/children/components/memberships-card", memberships: @memberships %>
  </div>
</section>

<section class="row justify-content-center">
  <div class="col-lg-11 col-sm-12 mt-3">
    <%= render "parents/children/components/camp-enrollments-card", camp_enrollments: @camp_enrollments %>
  </div>
</section>
