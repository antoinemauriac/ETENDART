<h1 class="bg-black parent-title text-center fs-4 py-3 fw-bold mb-3">
  PROCHAINS STAGES
</h1>
<div class="container mt-5 mb-5">
  <% @academies.each do |city, academies| %>
    <div class="row align-items-center">
      <div class="col-12 col-md-4 text-center d-flex justify-content-center">
        <h1 class="mb-0"><em><%= city.upcase %></em></h1>
        <i class="fa-solid fa-location-dot ms-3 fs-2"></i>
      </div>

      <div class="col-12 col-md-8 col-lg-6 d-flex flex-column align-items-center row">
        <% academies.each do |academy| %>
          <div class="">
            <%= link_to parents_academy_path(academy) do %>
              <div class="card-academy card-academy-parent" 
                   style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= display_academy_image(academy) %>')">
                <h6 class="mb-0"><%= academy.name.upcase %></h6>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <hr class="w-full">
  <% end %>
</div>
