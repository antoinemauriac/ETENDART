<div class="student-title"><%= @student.last_name.try(:upcase) %> - <%= @student.first_name %></div>
<div class="yellow-title">AJOUTER UN FEEDBACK</div>

<div class="container flexy">
  <div class="feedback-container">
    <%= form_with(model: @feedback, url: coaches_feedbacks_path, local: true) do |form| %>
      <%= form.hidden_field :student_id, value: params[:student_id] %>
      <div class="form-group">
        <%= form.text_area :content, class: "form-control", id: "feedback-content", placeholder: "Ecrivez votre commentaire ici...", required: true %>
      </div>
      <div class="flexy">
        <%= form.submit "Valider", class: "btn-etendart-small mt-3" %>
      </div>
    <% end %>
  </div>
</div>
