<%= render "shared/academy_header" %>
<div class="header-nav">
  <div class="header-nav-item"><%= link_to @academy.name.upcase, managers_academy_path(@academy) %></div>
  <div class="header-nav-item"><%= link_to "LES CATÉGORIES", managers_categories_path(academy: @academy) %></div>
  <div class="header-nav-item active"><%= @category.name.upcase %></div>
</div>
<div class="yellow-title">MODIFIER UNE CATÉGORIE</div>
<div class="flexy">
  <div class="form-container">
    <%= form_with(model: @category, url: managers_category_path(academy: @academy), method: :put, id: "category-form") do |form| %>
      <%= form.label :name, "Nom :" %>
      <%= form.text_field :name, class: "form-control" %>
      <div class="flex-btn">
        <%= form.submit "Valider", class: "btn-etendart" %>
        <%= link_to "Annuler", managers_categories_path(academy: @academy), class: "btn-etendart-black" %>
      </div>
    <% end %>
  </div>
</div>
