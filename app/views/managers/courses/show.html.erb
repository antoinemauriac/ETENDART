<%= render "shared/academy_header" %>

<div class="header-nav">
  <div class="header-nav-item"><%= link_to @course.academy.name.upcase, managers_academy_path(@course.academy) %></div>
  <div class="header-nav-item"><%= link_to "LES STAGES", managers_academy_school_periods_path(@course.academy, @course.school_period) %></div>
  <div class="header-nav-item"><%= link_to "#{@course.school_period.name.upcase} - #{@course.school_period.year}", managers_school_period_path(@course.school_period) %></div>
  <div class="header-nav-item"><%= link_to @course.camp.name.upcase, managers_camp_path(@course.camp) %></div>
  <div class="header-nav-item"><%= link_to @course.activity.name.upcase, managers_activity_path(@course.activity) %></div>
  <div class="header-nav-item active"><%= l(@course.starts_at, format: :default) %></div>
</div>
<div class="yellow-title mb-0">FEUILLE D'APPEL</div>
<div class="black-title"><%= @course.activity.name.upcase %> - <%= l(@course.starts_at, format: :default) %></div>

<div class="flexy justify-content-center presence-sheet-container">
  <div class="col-xxl-4 col-lg-6 col-md-8 col-sm-12" style="width:100%;max-width:450px">
    <div class="header-info">INFOS</div>
    <div class="content-info">
      <p>ADRESSE : <strong><%= @course.activity.location.address %> - <%= @course.activity.location.city %></strong></p>
      <p>NB ÉLÈVES ATTENDUS: <strong><%= @course.students.count %></strong></p>
      <% if @course.status %>
        <p class="green-text">NB PRÉSENTS : <strong><%= @course.present_students_count %></strong></p>
        <p class="red-text">NB ABSENTS : <strong><%= @course.missing_students_count %></strong></p>
      <% end %>
      <% if @academy.name == "Rudy Gobert" %>
        <p>NB ÉLÈVES EXCLUS : <strong><%= @banished_students.count %></strong></p>
      <% end %>
      <% if @course.status %>
        <p class="presence-status container">
          APPEL VALIDÉ <i class="fa-solid fa-check text-success fa-big"></i>
        </p>
      <% else %>
        <p class="presence-status container">
          APPEL EN ATTENTE <i class="fa-solid fa-xmark text-danger fa-big"></i>
        </p>
      <% end %>
    </div>
  </div>

  <div class="form-container container-presence-sheet col-xxl-4 col-lg-6 col-md-8 col-sm-12" data-controller="presence-sheet">
    <div class="header-info">LISTE</div>
    <%= form_with(url: update_enrollments_managers_course_path(@course), method: :put, class: "presence-sheet-form") do |form| %>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th class="presence-head"></th>
            <th class="presence-head" style="text-align:left">Élève</th>
            <th class="presence-head" style="text-align:left">Présent ?</th>
            <% if false %>
              <th class="presence-head" style="text-align:center"></th>
            <% end %>
            <% if @school_period.paid %>
              <th class="presence-head" style="text-align:center">A payé ?</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @enrollments.each do |enrollment| %>
            <tr>
              <td class="align-middle"><%= cl_image_tag enrollment.student.photo_or_default, class: "avatar-small" %></td>
              <td class="align-middle" style="text-align:left; max-width: 130px; overflow: hidden; text-overflow: ellipsis;">
                <%= link_to enrollment.student.last_name.try(:upcase), managers_student_path(enrollment.student, academy_id: @academy.id), class: "student-mr", style: "white-space: normal;" %><br>
                <%= link_to enrollment.student.first_name, managers_student_path(enrollment.student, academy_id: @academy.id), class: "student-mr" %><br>
                <% if @category.super_category == 'Cuisine' || @category.super_category == 'Accompagnement' %>
                  <span style="color: red; font-weight: bold;"><%= enrollment.student.allergy %></span>
                <% end %>
              </td>
              <td class="align-middle">
                <div class="form-switch form-switch-lg">
                  <%= form.check_box "enrollments[#{enrollment.id}][present]", { class: "form-check-input form-switch-input", id: "present-#{enrollment.id}", checked: enrollment.present? }, 1, 0 %>
                  <label class="form-check-label form-switch-label" for="present-#{enrollment.id}"></label>
                </div>
              </td>
              <% if false %>
                <td class="align-middle"><span class="status-text <%= enrollment.present ? 'd-none' : '' %>">Absent</span></td>
              <% end %>
              <% if @school_period.paid %>
                <td class="align-middle">
                  <div class="has-paid">
                    <%= form.check_box "enrollments[#{enrollment.id}][has_paid]", { class: "form-check-input", id: "has-paid-#{enrollment.id}", checked: enrollment.student.camp_enrollments.find_by(camp: @course.activity.camp)&.has_paid || false } %>
                  </div>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="flexy">
        <%= form.hidden_field :redirect_to, value: "manager" %>
        <%= form.submit "Valider", class: "btn-etendart btn-presence" %>
      </div>
    <% end %>
  </div>

  <% if @academy.name == "Rudy Gobert" && @banished_students.any? %>
    <div class="col-xxl-4 col-lg-6 col-md-8 col-sm-12" style="width:100%;max-width:450px">
      <div class="header-info">ÉLÈVES EXCLUS</div>
      <div class="content-info">
        <ul>
          <% @banished_students.each do |student| %>
            <li>
            <%= student.full_name_separator %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
