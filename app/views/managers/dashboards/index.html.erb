<div class="dashboard-container">
  <div class="row justify-content-center align-items-center">
    <% if @academies.size <= 4 %>
      <% @academies.each do |academy| %>
        <%= link_to managers_academy_path(academy), class: "col-12 col-lg-7 mt-1" do %>
          <div class="card-academy" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path @academies.first.image.key, quality: :auto %>')">
            <%= academy.name.upcase %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <% @academies.each do |academy| %>
        <%= link_to managers_academy_path(academy), class: "col-12 col-lg-5 mt-1" do %>
          <div class="card-academy" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path @academies.first.image.key, quality: :auto %>')">
            <%= academy.name.upcase %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
