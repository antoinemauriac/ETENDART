<div class="cards-academy">
  <% @academies.each do |academy| %>
    <%= link_to managers_academy_path(academy) do %>
      <div class="card-academy" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= asset_path("#{academy.name}.jpg") %>')">
          <%= academy.name %>
      </div>
    <% end %>
  <% end %>
</div>
