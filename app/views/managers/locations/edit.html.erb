<%= render "shared/academy_header" %>
<div class="yellow-title">Modifier une adresse</div>

<div class="flexy">
  <%= simple_form_for(@location, method: :put, url: managers_academy_location_path(@academy, @location), html: {class: "form-container", style: "width: 500px;"}) do |form| %>
    <div class="form-group">
      <%= form.input :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :address, "Adresse" %>
      <%= form.text_field :address, class: "form-control", "data-address-autocomplete-target": "address", "data-controller": "address-autocomplete", "data-address_autocomplete_api_key_value": ENV['MAPBOX_API_KEY'], value: @location.address %>
    </div>

    <div class="flex-btn">
      <%= form.submit "Valider", class: "btn-etendart" %>
      <button class="btn-etendart-black" id="cancel-location-btn" type="button">Annuler</button>
    </div>
  <% end %>
</div>
